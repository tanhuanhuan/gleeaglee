<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#FF646768"
    android:orientation="vertical">

    <com.tcl.huantan.hhpod.util.CircleImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:thh="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        thh:border_width="1dp" />

    <TextView
        android:id="@+id/menu_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ivory"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF646768"
        android:text="@string/login_exit"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorLoginText" />

    <Button
        android:id="@+id/exit_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF646768"
        android:text="@string/application_exit"
        android:textColor="@color/colorLoginText" />


</LinearLayout>

